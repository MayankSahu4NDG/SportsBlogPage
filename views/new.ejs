            <div class="ui icon input" style="margin-top: 3px;">
              <input type="text" name="image" placeholder="Image url">
            </div>
        </div>
        <div class="field" style="margin-top: 15px;">
            <div class="ui icon input" style="margin-top: 3px;">
              <input type="text" name="date" placeholder="Date of Submission">
